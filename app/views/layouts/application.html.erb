<!DOCTYPE html>
<html>
<head>
  <title>Stackoverflow</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="notice" style="background: green; color: white; text-align:center;">
    <%= flash[:notice] %>
  </div>

  <% if flash[:alert] %>
    <div id="alert" style="background: red; color: white; text-align:center;">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="container">
    <div class="col-md-4"></div>
    <%= yield %>
    <div class="col-md-4"></div>
  </div>
</body>

</html>
