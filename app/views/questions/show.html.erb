<h1><%= @question.question %></h1>

<p><%= @question.content %></p>
<p>And an image.</p>
<img src="http://lorempixel.com/400/200/">

<ul id="responses">
  <% @question.responses.each do |response| %>
    <li>
      <%= form_for @vote do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :response_id, :value => response.id %>
        <%= f.hidden_field :value, :value => 1 %>
        <%= f.button :upvote, :class => "btn btn-success btn-xs" %>
      <% end %>
      <%= form_for @vote do |f| %>
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <%= f.hidden_field :response_id, :value => response.id %>
        <%= f.hidden_field :value, :value => -1 %>
        <%= f.button :downvote, :class => "btn btn-danger btn-xs" %>
      <% end %>

      <%= response.response %>
    </li>
  <% end %>
</ul>

<% if current_user && current_user.id == @question.user_id %>
  <%= link_to "Delete Question", question_path(@question), :data => {:method => :delete, :confirm => "Are you sure you want to delete this question?"}, :class => "btn btn-danger" %>
<% end %>
<%= link_to "Go Back", questions_path, :class => "btn btn-primary" %>

<% if current_user %>
  <%= render 'responses/response_form' %>
<% end %>
